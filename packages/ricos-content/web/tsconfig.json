{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "declarationDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "."
  },
  "include": [
    "src",
    "*.ts",
    "src/**/*.json",
    "src/**/*.scss",
    "statics/**/*.json",
    "statics/**/*.schema.json",
    "statics/**/*.defaults.json",
    "statics/**/*.scss",
    "package.json",
    "lib",
    "node_modules/@tiptap"
  ],
  "exclude": ["node_modules", "**/*.spec.*"]
}
