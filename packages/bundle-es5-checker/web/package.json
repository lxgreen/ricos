{
  "name": "bundle-es5-checker",
  "version": "8.51.2",
  "author": {
    "name": "Bashar Qaddumi",
    "email": "bqaddumi@asaltech.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/ricos.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wix/ricos/issues"
  },
  "homepage": "https://github.com/wix/ricos/tree/master/packages/bundle-es5-checker",
  "files": [
    "dist",
    "libs",
    "viewer"
  ],
  "main": "dist/module.cjs.js",
  "types": "dist/src/index.d.ts",
  "module": "dist/module.js",
  "style": "dist/styles.min.scss",
  "scripts": {
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean",
    "build:rollup": "rollup --environment DYNAMIC_IMPORT,MODULE_NAME:bundle-es5-checker -c ../../../rollup.config.js",
    "build": "npm run build:rollup && node ../../../scripts/cssFix.js",
    "postbuild": "es-check",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:analyze:editor": "npm run build -- --environment MODULE_ANALYZE_EDITOR  && open stats.html",
    "build:analyze:viewer": "npm run build -- --environment MODULE_ANALYZE_VIEWER && open stats.html",
    "watch": "cross-env NODE_ENV=development MODULE_WATCH=1 npm run build:rollup -- --watch.chokidar",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx,d.ts}'",
    "test": "jest --verbose"
  },
  "dependencies": {
    "ricos-content": "8.51.2",
    "ricos-schema": "8.51.2",
    "wix-rich-content-common": "8.51.2",
    "wix-rich-content-editor-common": "8.51.2",
    "wix-rich-content-plugin-divider": "8.51.2",
    "wix-rich-content-plugin-image": "8.51.2",
    "wix-rich-content-plugin-spoiler": "8.51.2",
    "ricos-editor": "8.51.2"
  },
  "devDependencies": {
    "es-check": "5.2.4"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.jsx?$": "<rootDir>/../../../babel.jest.monorepo.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "unpkg": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
