{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./external-types.d.ts"],
    "composite": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react",
    "lib": ["es2015", "dom", "ESNext"],
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveConstEnums": false,
    "allowJs": true
  },
  "files": ["external-types.d.ts"],
  "include": ["packages", "packages/**/*.json", "*.ts", "scripts", "babel.config.js"],
  "exclude": ["**/node_modules/*", "**/dist/*"]
}
